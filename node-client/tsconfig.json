{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "outDir": "built/",
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "built",
    "node_modules"
  ]
}
